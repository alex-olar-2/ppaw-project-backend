<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            display: flex;
            flex-direction: column;
            padding: 0;
        }

        main {
            flex-grow: 1;
            padding-top: 20px;
            padding-bottom: 20px;
        }
    </style>
</head>
<body>

    <header class="sticky-top">
        <nav class="navbar navbar-expand-lg navbar-light bg-light mb-0 border-bottom shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand" href="/Admin/Index">Panou Admin</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarText">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    </ul>

                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <div class="d-flex align-items-center">
                            <span class="navbar-text me-3">
                                Salut, <strong>@User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value</strong>
                            </span>
                            <a class="btn btn-outline-danger btn-sm" href="/Account/Logout">Deconectare</a>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container">
        @RenderBody()
    </main>

    <footer class="text-center w-100 bg-light py-3 border-top mt-auto">
        <div class="container-fluid">
            <p class="mb-0">&copy; @DateTime.Now.Year - Admin Panel</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>