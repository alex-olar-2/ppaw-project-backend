@model ExtractInfoIdentityDocument.Models.User
@{
    ViewData["Title"] = "Editează Utilizator";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editează Utilizator</h2>

<form method="post" action="/Admin/EditUser" class="mt-4">
    <input type="hidden" name="id" value="@Model.Id" />

    <div class="mb-3">
        <label class="form-label">Email</label>
        <input type="email" name="email" class="form-control" value="@Model.Email" required />
    </div>

    <div class="mb-3">
        <label class="form-label fw-bold">Rol Curent (Extras prin ID):</label>
        <input type="text" class="form-control bg-light" value="@ViewBag.CurrentRoleName" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">Schimbă Rolul (Opțional)</label>
        <select name="roleId" class="form-control" asp-items="ViewBag.Roles"></select>
    </div>

    <div class="mb-3">
        <label class="form-label fw-bold">Abonament Curent (Extras prin ID):</label>
        <input type="text" class="form-control bg-light" value="@ViewBag.CurrentSubscriptionName" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">Schimbă Abonamentul (Opțional)</label>
        <select name="subscriptionId" class="form-control" asp-items="ViewBag.Subscriptions"></select>
    </div>

    <div class="mb-3 form-check">
        <input type="checkbox" name="isVisible" class="form-check-input" value="true" @(Model.IsVisible ? "checked" : "") />
        <label class="form-check-label">Vizibil</label>
    </div>
    <button type="submit" class="btn btn-primary">Actualizează</button>
    <a href="/Admin/Users" class="btn btn-secondary">Anulează</a>
</form>