@using Microsoft.AspNetCore.Mvc.Rendering
@model ExtractInfoIdentityDocument.Models.User
@{
    ViewData["Title"] = "Editează Utilizator";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editează Utilizator</h2>

<form method="post" action="/Admin/EditUser" class="mt-4">
    <input type="hidden" name="id" value="@Model.Id" />

    <div class="mb-3">
        <label class="form-label">Email</label>
        <input type="email" name="email" class="form-control" value="@Model.Email" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Parolă (Lasă neschimbat sau introdu una nouă)</label>
        <input type="text" name="password" class="form-control" value="@Model.Password" />
    </div>

    <div class="mb-3">
        <label class="form-label">CUI</label>
        <input type="text" name="cui" class="form-control" value="@Model.Cui" />
    </div>

    <div class="mb-3">
        <label class="form-label fw-bold">Rol</label>
        <select name="roleId" class="form-control">
            @if (ViewBag.Roles is IEnumerable<SelectListItem> roles)
            {
                foreach (var role in roles)
                {
                    <!option value="@role.Value" @(role.Selected ? "selected" : "")>@role.Text</!option>
                }
            }
            else
            {
                <option disabled>Nu s-au găsit roluri</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label fw-bold">Abonament</label>
        <select name="subscriptionId" class="form-control">
            @if (ViewBag.Subscriptions is IEnumerable<SelectListItem> subs)
            {
                foreach (var sub in subs)
                {
                    <!option value="@sub.Value" @(sub.Selected ? "selected" : "")>@sub.Text</!option>
                }
            }
            else
            {
                <option disabled>Nu s-au găsit abonamente</option>
            }
        </select>
    </div>

    <div class="mb-3 form-check">
        <input type="checkbox" name="isVisible" class="form-check-input" value="true" @(Model.IsVisible ? "checked" : "") />
        <label class="form-check-label">Vizibil</label>
    </div>

    <button type="submit" class="btn btn-primary">Actualizează</button>
    <a href="/Admin/Users" class="btn btn-secondary">Anulează</a>
</form>