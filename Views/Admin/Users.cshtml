@model List<ExtractInfoIdentityDocument.Models.User>
@{
    ViewData["Title"] = "Utilizatori";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Lista Utilizatorilor</h1>
    <a href="/Admin/CreateUser" class="btn btn-primary">Adaugă Utilizator Nou</a>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Email</th>
            <th>CUI</th>
            <th>Vizibil</th>
            <th>Acțiuni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.Cui</td>
                <td>@(user.IsVisible ? "Da" : "Nu")</td>
                <td>
                    <a href="/Admin/EditUser?id=@user.Id" class="btn btn-sm btn-warning">Edit</a>
                    <form action="/Admin/DeleteUser" method="post" style="display:inline;" onsubmit="return confirm('Sigur doriți să ștergeți acest utilizator?');">
                        <input type="hidden" name="id" value="@user.Id" />
                        <button type="submit" class="btn btn-sm btn-danger">Șterge</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>