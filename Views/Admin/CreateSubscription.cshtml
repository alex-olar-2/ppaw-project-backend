@{
    ViewData["Title"] = "Adaugă Abonament";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Adaugă Abonament</h2>

<form method="post" action="/Admin/CreateSubscription" class="mt-4">
    <div class="mb-3">
        <label class="form-label">Nume Abonament</label>
        <input type="text" name="name" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Preț (RON)</label>
        <input type="number" step="0.01" name="price" class="form-control" required />
    </div>

    <div class="mb-3 form-check">
        <input type="checkbox" name="isDefault" class="form-check-input" value="true" />
        <label class="form-check-label">Implicit (Setează acest abonament ca default pentru utilizatorii noi)</label>
    </div>

    <div class="mb-3 form-check">
        <input type="checkbox" name="isVisible" class="form-check-input" value="true" checked />
        <label class="form-check-label">Vizibil</label>
    </div>

    <button type="submit" class="btn btn-success">Salvează</button>
    <a href="/Admin/Subscriptions" class="btn btn-secondary">Anulează</a>
</form>