@model List<ExtractInfoIdentityDocument.Models.Use>
@{
    ViewData["Title"] = "Utilizari";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista Utilizarilor</h1>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Id Utilizator</th>
            <th>Id Carte De Identitate</th>
            <th>Creat</th>
            <th>Modificat</th>
            <th>Succes</th>
            <th>Vizibil</th>
            <th>Acțiuni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var use in Model)
        {
            <tr>
                <td>@use.Id</td>
                <td>@use.UserId</td>
                <td>@use.IdentityCardId</td>
                <td>@use.CreatedAt</td>
                <td>@use.ModifiedAt</td>
                <td>@(use.IsSucceeded ? "Da" : "Nu")</td>
                <td>@(use.IsVisible ? "Da" : "Nu")</td>
                <td>
                    <form action="/Admin/DeleteUse" method="post" style="display:inline;" onsubmit="return confirm('Sigur doriți să ștergeți această utilizare?');">
                        <input type="hidden" name="id" value="@use.Id" />
                        <button type="submit" class="btn btn-sm btn-danger">Șterge</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>