@model List<ExtractInfoIdentityDocument.Models.IdentityCard>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Carti de identitate";
}

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>CNP</th>
            <th>Serie</th>
            <th>Prenume</th>
            <th>Nume</th>
            <th>Adresa</th>
            <th>Oras</th>
            <th>Judet</th>
            <th>Tara</th>
            <th>Vizibil</th>
            <th>Acțiuni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var identityCard in Model)
        {
            <tr>
                <td>@identityCard.Id</td>
                <td>@identityCard.Cnp</td>
                <td>@identityCard.Series</td>
                <td>@identityCard.FirstName</td>
                <td>@identityCard.LastName</td>
                <td>@identityCard.Address</td>
                <td>@identityCard.City</td>
                <td>@identityCard.County</td>
                <td>@identityCard.Country</td>
                <td>@(identityCard.IsVisible ? "Da" : "Nu")</td>
                <td>
                    <a href="/Admin/EditIdentityCard?id=@identityCard.Id" class="btn btn-sm btn-warning">Edit</a>

                    <form action="/Admin/DeleteIdentityCard" method="post" style="display:inline;" onsubmit="return confirm('Sigur doriți să ștergeți această carte de identitate?');">
                        <input type="hidden" name="id" value="@identityCard.Id" />
                        <button type="submit" class="btn btn-sm btn-danger">Șterge</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>