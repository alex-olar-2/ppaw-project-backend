@model ExtractInfoIdentityDocument.Models.Subscription
@{
    ViewData["Title"] = "Editează Abonament";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editează Abonament</h2>

<form method="post" action="/Admin/EditSubscription" class="mt-4">
    <input type="hidden" name="id" value="@Model.Id" />

    <div class="mb-3">
        <label class="form-label">Nume Abonament</label>
        <input type="text" name="name" class="form-control" value="@Model.Name" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Preț (RON)</label>
        <input type="number" step="0.01" name="price" class="form-control" value="@Model.Price" required />
    </div>

    <div class="mb-3 form-check">
        <input type="checkbox" name="isDefault" class="form-check-input" value="true" @(Model.IsDefault ? "checked" : "") />
        <label class="form-check-label">Implicit</label>
    </div>

    <div class="mb-3 form-check">
        <input type="checkbox" name="isVisible" class="form-check-input" value="true" @(Model.IsVisible ? "checked" : "") />
        <label class="form-check-label">Vizibil</label>
    </div>

    <button type="submit" class="btn btn-primary">Actualizează</button>
    <a href="/Admin/Subscriptions" class="btn btn-secondary">Anulează</a>
</form>